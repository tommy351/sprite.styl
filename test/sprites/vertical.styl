icons = sprite-map("icons/*.png")

.foo
  background: sprite-url(icons)

.add-to-desktop
  sprite(icons, add-to-desktop)
  background-position: sprite-position(icons, add-to-desktop)

.cards-club
  sprite(icons, cards-club)
  background-position: sprite-position(icons, cards-club)

.cards-diamond
  sprite(icons, cards-diamond)
  background-position: sprite-position(icons, cards-diamond)

.cards-heart
  sprite(icons, cards-heart)
  background-position: sprite-position(icons, cards-heart)

.cards-spade
  sprite(icons, cards-spade)
  background-position: sprite-position(icons, cards-spade)